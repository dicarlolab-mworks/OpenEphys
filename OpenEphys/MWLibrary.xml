<MWElements>

  <MWElement name="Open Ephys Interface">
    <match_signature>iodevice[@type="open_ephys_interface"]</match_signature>
    
    <isa>IODevice</isa>

    <icon>smallIOFolder</icon>
    
    <description>
Interface to the Open Ephys GUI application.  Requires an OE Event Broadcaster sink listening on the specified hostname and port.
    </description>
    
    <code>
      <iodevice type="open_ephys_interface"
                tag="Open Ephys Interface"
                hostname="localhost"
                port="5557"
                sync=""
                sync_channels=""
                clock_offset=""
                spikes=""
                />
    </code>
  </MWElement>

  <MWElement name="Open Ephys Network Events Client">
    <match_signature>iodevice[@type="open_ephys_network_events_client"]</match_signature>
    
    <isa>IODevice</isa>

    <icon>smallIOFolder</icon>
    
    <description>
Interface to an Open Ephys Network Events module
    </description>
    
    <code>
      <iodevice type="open_ephys_network_events_client"
                tag="Open Ephys Network Events Client"
                hostname="localhost"
                port="5556"
                request=""
                response=""
                />
    </code>
  </MWElement>

</MWElements>
